#include<iostream>
using namespace std;

int main() {

	int i, j, N;

	cout << "Enter a number: ";
	cin >> N;

	for (i = 1; i <= N; i++) {
		for (j = 1; j <= i; j++) {

			if (j == 1 || j == i || i == N) {
				cout << "*";
			}
			else {
				cout << " ";
			}
		}

		cout << "\n";
	}


// Easy code for hollow square 
#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the size of the square: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (i == 0 || i == n - 1 || j == 0 || j == n - 1)
                cout << "* ";
            else
                cout << "  ";
        }
        cout << endl;
    }

    return 0;
}

	system("pause");
	return 0;

}
